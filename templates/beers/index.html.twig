{% extends 'base.html.twig' %}

{% block title %}Page Beers
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			{% if beers %}
				{% for beer in beers %}
					<div class="card">
						<div class="card-body">
							<h2 class="card-title">Name : {{ beer.name }}</h2>
							<p class="card-text">Degree : {{ beer.degree }}</p>
							<p class="card-text">Date : {{ beer.publishedAt | date('d-m-y h:s:m') }}</p>
							<p class="card-text">Rating : {{ beer.rating }}</p>
							<img src="{{ asset('build/images/beer_00.jpeg') }}" />
							<p{{ beer.description }}</p>
						</div>
					</div>
				{% endfor %}
			{% else %}
				<p>Aucune bi√®re</p>
			{% endif %}
		</div>
	</div>
</div>{% endblock %}
